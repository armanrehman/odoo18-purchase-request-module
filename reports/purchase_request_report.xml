<odoo>
    <template id="report_purchase_request_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2>Purchase Request: <span t-esc="doc.name"/></h2>
                    <p><strong>Requester:</strong> <span t-esc="doc.requester_id.name"/></p>
                    <p><strong>Branch:</strong> <span t-esc="doc.branch"/></p>
                    <p><strong>Department:</strong> <span t-esc="doc.department"/></p>
                    <p><strong>Status:</strong> <span t-esc="doc.state"/></p>
                    <p><strong>Posting Date:</strong> <span t-esc="doc.posting_date"/></p>
                    <h3>Request Lines</h3>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Item No</th>
                                <th>Description</th>
                                <th>Vendor</th>
                                <th>Required Date</th>
                                <th>Required Qty</th>
                                <th>Info Price</th>
                                <th>UoM</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="doc.line_ids" t-as="line">
                                <td><span t-esc="line.product_id.default_code"/></td>
                                <td><span t-esc="line.item_description"/></td>
                                <td><span t-esc="line.vendor_id.name"/></td>
                                <td><span t-esc="line.required_date"/></td>
                                <td><span t-esc="line.required_qty"/></td>
                                <td><span t-esc="line.info_price"/></td>
                                <td><span t-esc="line.product_uom_id.name"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <report
        id="action_report_purchase_request"
        model="purchase.request"
        string="Purchase Request"
        report_type="qweb-pdf"
        name="purchase_request.report_purchase_request_document"
        file="purchase_request.report_purchase_request_document"
        print_report_name="'Purchase Request - %s' % (object.name)"
    />
</odoo>